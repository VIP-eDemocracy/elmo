----------------------------
Basic Info
----------------------------
Time: <%= Time.zone.now %>
<% if @env && @params %>
Location: <%= raw @env['REQUEST_URI'] %>
Action: <%= @params[:action] %>
Controller: <%= @params[:controller] %>
Query: <%= raw @env['QUERY_STRING'] %>
Method: <%= @env['REQUEST_METHOD'] %>
SSL: <%= @env['SERVER_PORT'].to_i == 443 ? "true" : "false" %>
Agent: <%= raw @env['HTTP_USER_AGENT'] %>
User: <%= @user ? "#{@user.login} <#{@user.email}>".html_safe : "None" %>
Version: <%= configatron.system_version %>
<% end %>

----------------------------
Backtrace
----------------------------
<%= raw @exception.class.to_s %>: <%= raw @exception.message %>
<%= raw @exception.backtrace.to_a.join("\n") %>

<% if @params %>
----------------------------
Params
----------------------------
<% @params.each do |key, val| -%>
<%= raw key %>: <%= raw val %>
<% end -%>
<% end %>

<% if @session %>
----------------------------
Session
----------------------------
<% @session.each do |key, val| -%>
<%= raw key %>: <%= val %>
<% end -%>
<% end %>

<% if @env %>
----------------------------
Environment
----------------------------
<% @env.each do |key, val| -%>
<%= raw key %>: <%= raw val %>
<% end -%>
<% end %>